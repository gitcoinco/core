{
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gitcoinco/core.git"
  },
  "name": "with-changesets",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev --filter=!next*-usage",
    "dev:ssr": "turbo dev --filter=next*-usage",
    "lint": "turbo lint",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "changeset:pre": "sh scripts/pre-release.sh",
    "changeset:pre-exit": "changeset pre exit",
    "version-packages": "changeset version",
    "release": "turbo build --filter=@repo/*^... && changeset publish",
    "prepare": "husky",
    "lint-staged": "turbo lint-staged"
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "eslint": "^8.57.0",
    "turbo": "^2.0.3"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.1",
    "husky": "^9.1.7",
    "inquirer": "^9.3.7",
    "lint-staged": "^15.4.2",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.11"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  }
}
