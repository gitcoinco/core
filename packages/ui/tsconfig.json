{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "~retrofunding/*": ["./src/features/retrofunding/*"],
      "~application": ["./src/components/Application"],
      "~application/*": ["./src/components/Application/*"],
      "~pool": ["./src/components/Pool"],
      "~pool/*": ["./src/components/Pool/*"],
      "~program": ["./src/components/Program"],
      "~program/*": ["./src/components/Program/*"],
      "~project": ["./src/components/Project"],
      "~project/*": ["./src/components/Project/*"],
      "plotly.js": ["../node_modules/plotly.js/lib/core.js"]
    },
    "outDir": "./dist"
  },
  "include": ["src", "src/vite-env.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
